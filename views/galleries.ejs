<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, user-scalable=no, maximum-scale=1.0">
    <title>Galleries &middot; caer.me</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/gallery.css">
    <script type="text/javascript" src="//use.typekit.net/hge8nui.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>

  <body>
    <div id="main">
    <a href="/gallery/new" class="admin-function">+ new gallery</a>

    <h1>Galleries</h1>
    <ul class="gallery-list">
    <% for ( var i = 0; i < galleries.length; i += 1 ) { %>
    <% var g = galleries[i]; %>
      <% if ( g.password ) { %>
      <li class="private"><a href="<%- g.url %>"><%- g.title %></a></li>
      <% } else { %>
      <li><a href="<%- g.url %>"><%- g.title %></a>
      &middot; <%= g.count %> images
      </li>
      <% } %>
    <% } %>
    </ul>

  </div>
  </body>
</html>



