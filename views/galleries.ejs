<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, user-scalable=no, maximum-scale=1.0">
    <title>photo.andyf.me</title>
    <link href='//fonts.googleapis.com/css?family=PT+Serif:400,700,400italic|Open+Sans:300italic,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/gallery.css">
  </head>

  <body>
    <div id="main">
    <a href="/gallery/new" class="admin-function">+ new gallery</a>

    <h1 class="page-title">photo . <a href="//andyf.me/">andyf.me</a></h1>
    <ul class="gallery-list">
    <% for ( var i = 0; i < galleries.length; i += 1 ) { %>
    <% var g = galleries[i]; %>
      <% if ( g.private ) { %>
      <li class="private"><a href="<%- g.url %>"><%- g.title %></a></li>
      <% } else { %>
      <li><a href="<%- g.url %>"><%- g.title %></a>
      &middot; <%= g.count %> images
      </li>
      <% } %>
    <% } %>
    </ul>

  </div>
  </body>
</html>



